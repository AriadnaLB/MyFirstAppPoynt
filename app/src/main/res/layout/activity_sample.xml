<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SampleActivity">


    <TextView
        android:id="@+id/bizInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-n/a-"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bizInfo"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/currentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current User" />

        <Button
            android:id="@+id/getToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Token" />


    </LinearLayout>

    <Button
        android:id="@+id/displayItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRow"
        android:text="Display items"
        android:visibility="visible" />

    <Button
        android:id="@+id/displayWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRow"
        android:layout_toRightOf="@id/displayItems"
        android:text="Display welcome"
        android:visibility="visible" />

    <Button
        android:id="@+id/chargeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayItems"
        android:text="Charge $10.00"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/discountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chargeBtn"
        android:orientation="horizontal"
        android:visibility="invisible">

        <EditText
            android:id="@+id/discountCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:imeActionLabel="Done"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:text="ONEDOLLAROFF" />

        <Button
            android:id="@+id/applyDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Discount" />
    </LinearLayout>

    <Button
        android:id="@+id/clearLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discountLayout"
        android:text="Clear Log" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/clearLog"
        android:background="#000000" />

    <ScrollView
        android:id="@+id/demoScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator2"
        android:padding="5dp">

        <TextView
            android:id="@+id/consoleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:typeface="monospace" />
    </ScrollView>


    <!-- dummy layout to prevent keyboard from poping out-->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>
