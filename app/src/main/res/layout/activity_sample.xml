<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SampleActivity">

    <LinearLayout
        android:id="@+id/userInfoRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User:" />

        <TextView
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no user yet!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tokenInfoRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userInfoRow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tokenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AccessToken:" />

        <TextView
            android:id="@+id/tokenInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userInfo"
            android:text="no token yet!" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tokenInfoRow"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/currentUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current User" />

        <Button
            android:id="@+id/getToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Token" />


    </LinearLayout>

    <TextView
        android:id="@+id/bizInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRow"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/chargeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bizInfo"
        android:text="Charge $10.00"
        android:visibility="invisible" />

    <Button
        android:id="@+id/displayItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chargeBtn"
        android:text="Display items in second screen"
        android:visibility="visible" />

    <TextView
        android:id="@+id/discountProviders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayItems" />

    <LinearLayout
        android:id="@+id/discountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discountProviders"
        android:orientation="horizontal"
        android:visibility="invisible">

        <EditText
            android:id="@+id/discountCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:imeActionLabel="Done"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:text="ONEDOLLAROFF" />

        <Button
            android:id="@+id/applyDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Discount" />
    </LinearLayout>

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/discountLayout"
        android:background="#000000" />

    <ScrollView
        android:id="@+id/demoScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator2"
        android:padding="5dp">

        <TextView
            android:id="@+id/consoleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:typeface="monospace" />
    </ScrollView>


    <!-- dummy layout to prevent keyboard from poping out-->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>
